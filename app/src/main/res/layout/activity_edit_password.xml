<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditPasswordActivity" android:background="@android:color/holo_green_light">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_pass_old_password"
            android:background="@drawable/rounded_edittext_register_login"
            android:hint="Mot de passe actuel"
            android:paddingLeft="16dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/login_logo"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/edit_pass_new_password"
            android:background="@drawable/rounded_edittext_register_login" android:hint="Nouveau mot de passe"
            android:paddingLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_pass_old_password"
            app:layout_constraintEnd_toEndOf="@+id/edit_pass_old_password"
            app:layout_constraintStart_toStartOf="@+id/edit_pass_old_password"
            app:layout_constraintHorizontal_bias="0.0" android:inputType="textPassword"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_pass_new_password_confirm"
            android:background="@drawable/rounded_edittext_register_login" android:hint="Confirmation mot de passe"
            android:paddingLeft="16dp"
            app:layout_constraintEnd_toEndOf="@+id/edit_pass_old_password"
            app:layout_constraintStart_toStartOf="@+id/edit_pass_old_password"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_pass_new_password"/>
    <Button
            android:text="METTRE A JOUR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/update_pass_button"
            app:layout_constraintEnd_toEndOf="@+id/edit_pass_new_password"
            app:layout_constraintStart_toStartOf="@+id/edit_pass_new_password"
            android:background="@drawable/rounded_button" android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_pass_new_password_confirm"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@mipmap/pharmacie"
            android:id="@+id/login_logo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="140dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>

</androidx.constraintlayout.widget.ConstraintLayout>