<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PharmacieModalActivity" android:background="@drawable/rounded_button_white">

    <ImageView
            android:src="@mipmap/pharmacie"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="0.497"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/map"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:civ_border_color="@color/colorPrimaryDark" app:civ_border_width="2dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/smartphone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView7" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="@+id/imageView3"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/horaires"
            android:layout_width="40dp"
            android:layout_height="40dp" android:id="@+id/imageView11"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="@+id/imageView7"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/convention"
            android:layout_width="40dp"
            android:layout_height="40dp" android:id="@+id/imageView13"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView11"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="@+id/imageView11"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/facebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintCircleRadius="4dp"
            android:id="@+id/imageView14" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView13"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="@+id/imageView13"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pharm_detail_adresse"
            android:inputType="textMultiLine" tools:text="Adresse" app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:background="@drawable/pharm_item"
            android:paddingStart="5dp" android:paddingBottom="15dp" android:paddingTop="15dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pharm_detail_phone" app:layout_constraintStart_toEndOf="@+id/imageView7"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7" tools:text="Telephone" android:paddingStart="5dp"
            android:paddingTop="15dp" android:paddingBottom="15dp" android:background="@drawable/pharm_item"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pharm_detail_horaires" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="@+id/imageView11"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" tools:text="Horaires" android:paddingStart="5dp" android:paddingTop="15dp"
            android:paddingBottom="15dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pharm_detail_conventions"
            app:layout_constraintTop_toTopOf="@+id/imageView13"
            app:layout_constraintBottom_toBottomOf="@+id/imageView13"
            app:layout_constraintStart_toEndOf="@+id/imageView13" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" tools:text="Conventions"
            android:paddingStart="5dp" android:paddingTop="15dp" android:paddingBottom="15dp"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pharm_detail_facebook" app:layout_constraintStart_toEndOf="@+id/imageView14"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageView14"
            app:layout_constraintBottom_toBottomOf="@+id/imageView14" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" tools:text="Facebook" android:paddingStart="5dp" android:paddingTop="15dp"
            android:paddingBottom="15dp" android:background="@drawable/pharm_item"/>
    <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/pharma_background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginTop="8dp"/>
    <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/pharma_background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" android:layout_marginTop="8dp"/>
    <View
            android:id="@+id/divider5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/pharma_background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView11" android:layout_marginTop="8dp"/>
    <View
            android:id="@+id/divider6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/pharma_background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>