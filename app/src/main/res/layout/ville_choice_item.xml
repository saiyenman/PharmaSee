<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="90dp"
              android:layout_height="40dp" android:background="@drawable/ville_item"
              android:layout_marginLeft="3dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" android:id="@+id/ville_number" tools:text="10" android:textSize="14sp"
            android:textStyle="bold" android:textColor="@android:color/white"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" android:id="@+id/ville_name" tools:text="villeName"
            android:textSize="14sp" android:textColor="@android:color/white"/>
</LinearLayout>